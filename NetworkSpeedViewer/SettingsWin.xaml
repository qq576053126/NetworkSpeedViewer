<Window x:Class="NetworkSpeedViewer.SettingsWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="设置" Height="291" Width="492" Loaded="Window_Loaded" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Icon="myicon.ico">
    <Grid>
        <ListBox x:Name="settings_AdapterListBox" HorizontalAlignment="Left" Height="169" Margin="10,10,0,0" VerticalAlignment="Top" Width="308" SelectionChanged="settings_AdapterListBox_SelectionChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="334,60,0,0" TextWrapping="Wrap" Text="上行：" VerticalAlignment="Top"/>
        <TextBlock x:Name="settings_Upload" TextAlignment="Center" HorizontalAlignment="Left" Margin="375,60,0,0" TextWrapping="Wrap" Text="0B/秒" VerticalAlignment="Top" Width="99"/>
        <TextBlock HorizontalAlignment="Left" Margin="334,123,0,0" TextWrapping="Wrap" Text="下行：" VerticalAlignment="Top"/>
        <TextBlock x:Name="settings_Download" TextAlignment="Center" HorizontalAlignment="Left" Margin="375,123,0,0" TextWrapping="Wrap" Text="0B/秒" VerticalAlignment="Top" Width="99"/>
        <Button Content="确定" HorizontalAlignment="Left" Margin="205,204,0,0" VerticalAlignment="Top" Width="76" Height="25" Click="SelectAdapter_Click"/>
    </Grid>
</Window>
